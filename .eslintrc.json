{
  "root": true,
  "extends": [
    "standard-with-typescript",
    "plugin:storybook/recommended",
    "standard-jsx",
    "plugin:react-hooks/recommended"
  ],
  "ignorePatterns": [
    "/dist",
    "/storybook-static",
    "/jest.config.js"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "max-len": [
      "error",
      100
    ]
  }
}